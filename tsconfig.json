{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "**/*.spec.ts"
    ],
    "lib": ["ES2015"]
}